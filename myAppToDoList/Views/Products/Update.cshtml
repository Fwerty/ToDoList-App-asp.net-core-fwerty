<style>
    .yaziyi_ortala {
        display: flex;
        justify-content: center;
        align-items: center;
    }
</style>

@{
    ViewData["Title"] = "Update";
}
<br />
<h1 style="margin-left:15px">Ürün güncelle</h1>

@model Product

@{
    string urlAttributeValue = Model.url;
}

<form asp-controller="Products" asp-action="Update" method="post" enctype="multipart/form-data">
    <br />
    <div class="container" style="margin-top:15px;">
        <div class="row">
            <div class="col-4 yaziyi_ortala">
                <div class="card">
                    <img src="/resimler/@urlAttributeValue" class="card-img-top" style="object-fit: cover;width: 354px;height: 354px;" alt="...">
                </div>
            </div>
            <div class="col-7 " style="margin-left:20px">
                <div class="mb-4">
                    <label for="formFile" class="form-label"></label>
                    <input class="form-control" type="file" name="url">
                </div>



                <div class="form-group">
                    <label asp-for="Name" style="display:none;"></label>
                    <input class="form-control" type="text" asp-for="Name" placeholder="başlık" />
                </div>
                <br />
                <form>
                    <div class="form-group" style="margin-bottom: 18px;">
                        <textarea class="form-control" asp-for="Description" row="7" placeholder="Ürün açıklaması"></textarea>
                    </div>
                    <button type="submit" class="btn btn-primary" name="submit" autocomplete="off" style="padding-left:15px;padding-right:15px;margin-right:3px">Save</button>



                    <button type="submit" class="btn btn-primary" name="submit" autocomplete="off">
                        <a asp-controller="Products" asp-action="Remove" asp-route-id="@Model.Id" style="text-decoration:none;color:white">Remove </a>
                    </button>


                </form>

            </div>
        </div>
    </div>


    <br />



</form>



<script>
    function previewImage(input) {
        if (input.files && input.files[0]) {
            var reader = new FileReader();

            reader.onload = function (e) {
                document.getElementById('imagePreview').src = e.target.result;
            }

            reader.readAsDataURL(input.files[0]); 
        }
    }
</script>






