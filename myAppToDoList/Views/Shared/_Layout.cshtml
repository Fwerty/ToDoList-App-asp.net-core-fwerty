<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - myAppToDoList</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/myAppToDoList.styles.css" asp-append-version="true" />


    <style>
        .navbar-nav .nav-link {
            font-size: 23px; 
        }

        .navbar {
            padding: 8px; 
        }
    </style>

</head>
<body>
    <header>
      
        <nav class="navbar navbar-expand-lg" style="background-color: #2a3035;">
            <div class="container-fluid" style="color:white">
                <a class="navbar-brand" style="color:white;padding-right:5px;padding-left:5px;font-size: 23px;"
                   asp-area="" asp-controller="Home" asp-action="Index">ToDoList</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse"
                        data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse" id="navbarSupportedContent">
                    <ul class="navbar-nav me-auto mb-2 mb-lg-0">
                        <li class="nav-item">
                            <a class="nav-link active" aria-current="page" style="color:white"
                               asp-area="" asp-controller="Products" asp-action="Index">Gallery </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" style="color:white"
                               asp-area="" asp-controller="Products" asp-action="WishListPage">Wishlist </a>
                        </li>
                    </ul>
                    <ul class="navbar-nav" style="color:white;">
                        <li class="nav-item">
                            <a class="nav-link" style="color:white;display: flex;align-items: center;"
                               asp-area="" asp-controller="Products" asp-action="MyAccount">My Account </a>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2024 - To Do List App - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
